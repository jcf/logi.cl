!!! XML
!!!
%html{ html_attrs }
  %head

    %title= "#{@link.target} &mdash; logi.cl"

    =stylesheet_link_tag 'reset'
    =stylesheet_link_tag 'application'
    =javascript_include_tag 'jquery-1.3.1.min'
    =auth_token_javascript
    =javascript_include_tag 'application'

  %body{ body_attrs }

    #header_background
      #header
        %h1
          =link_to "logi.cl", root_url
        %ul#navigation
          %li= tab_to 'logi.cl', root_url
          %li= tab_to 'about', about_url
          %li= tab_to 'services', services_url
          %li= tab_to 'contact', messages_url, :id => 'contact_tab'

    =render :partial => 'shared/contact_form'

    #flash
      =render_flash

    #content
      =yield
