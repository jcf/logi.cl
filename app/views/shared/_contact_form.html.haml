#contact_form
  - form_for :message, :url => {:controller => 'messages', :action => 'create'} do |f|
    #left_form
      = f.label :body, 'Message'
      = f.text_area :body, :size => '30x10'
      = f.submit 'Send Message'
      = button_to_function 'Cancel', "$('#contact_form').slideUp();", :class => 'cancel'
    #right_form
      = f.label :name
      = f.text_field :name
      = f.label :email
      = f.text_field :email
      = f.label :website
      = f.text_field :website
    = clear