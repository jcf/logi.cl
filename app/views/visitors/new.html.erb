<h1>New visitor</h1>

<% form_for(@visitor) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_agent %><br />
    <%= f.text_area :user_agent %>
  </p>
  <p>
    <%= f.label :clicks %><br />
    <%= f.text_field :clicks %>
  </p>
  <p>
    <%= f.label :remote_addr %><br />
    <%= f.text_field :remote_addr %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', visitors_path %>
