%h1 New contact

- form_for(@contact) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :website
    %br
    = f.text_field :website
  %p
    = f.label :message
    %br
    = f.text_area :message
  %p
    = f.label :remote_address
    %br
    = f.text_field :remote_address
  %p
    = f.submit "Send"

= link_to 'Back', contacts_path